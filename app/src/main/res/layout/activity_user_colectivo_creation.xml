<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#FFF5F3"
    tools:context=".UserColectivoCreation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Colectivo"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtNombreUsuarioColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:hint="Nombre de usuario"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#a6a6a6"/>

    <EditText
        android:id="@+id/txtEmailColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        android:textColorHint="#a6a6a6"/>

    <EditText
        android:id="@+id/txtContraseñaColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#a6a6a6"/>

    <EditText
        android:id="@+id/txtPhoneColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Teléfono (opcional)"
        android:inputType="phone"
        android:textColorHint="#a6a6a6"
        android:textColor="#000"
        android:layout_margin="3dp"/>

    <CheckBox
        android:id="@+id/chkCondicionesColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acepto los términos y condiciones del servicio" />

    <Button
        android:id="@+id/btnRegistrarColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:background="#27C45F"
        android:textColor="#000"
        android:layout_margin="2dp"/>

</LinearLayout>