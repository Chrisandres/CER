<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#969C9F"
    tools:context=".UserTypeCreation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elija el tipo de registro que quiere realizar"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/colectivoenruta" />

    <Button
        android:id="@+id/btnRegistroColectivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#27C45F"
        android:textColor="#000"
        android:text="Registrarse como Colectivero" />

    <Button
        android:id="@+id/btnRegistroCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#27C45F"
        android:textColor="#000"
        android:text="Registrarse como cliente" />

</LinearLayout>